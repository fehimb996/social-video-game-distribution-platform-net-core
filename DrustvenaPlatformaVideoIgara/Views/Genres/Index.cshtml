@using DrustvenaPlatformaVideoIgara.ViewModels
@model GenreAndPlatformViewModel

@{
    ViewData["Title"] = "Categories";
}

<style>
    .category-section {
        text-align: center;
        margin-bottom: 50px;
    }

        .category-section h2 {
            font-size: 2.5rem;
            color: #e5e5e5;
            margin-bottom: 20px;
        }

    .category-divider {
        width: 60%;
        height: 2px;
        background-color: #5bc0de;
        margin: 20px auto;
        border-radius: 2px;
    }

    .card {
        margin: 0 auto; /* Centers the card in its column */
    }

    .card-body {
        text-align: center;
    }
</style>

<div class="container py-4">
    <!-- Platforms Section -->
    <div class="category-section">
        <h2>Platforms</h2>
        <div class="category-divider"></div>
        @foreach (var platform in Model.Platforms)
        {
            <div class="mb-4">
                <h4 class="text-light pb-2">@platform.PlatformName</h4>
                @if (platform.ProductPlatforms.Any())
                {
                    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-3">
                        @foreach (var productPlatform in platform.ProductPlatforms)
                        {
                            var product = productPlatform.Product;
                            <div class="col">
                                <div class="card text-light bg-dark border-0">
                                    <a asp-action="Details" asp-controller="Products" asp-route-id="@product.ProductId" class="text-decoration-none text-light">
                                        <img src="@product.ImagePath" alt="@product.ProductName" class="card-img-top" style="max-height: 180px; object-fit: cover;">
                                        <div class="card-body">
                                            <h5 class="card-title">@product.ProductName</h5>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-light">No products available for this platform.</p>
                }
            </div>
        }
    </div>

    <!-- Genres Section -->
