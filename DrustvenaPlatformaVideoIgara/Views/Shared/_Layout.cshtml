@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DrustvenaPlatformaVideoIgara</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DrustvenaPlatformaVideoIgara.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3 bg-dark" id="myNavbar">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-center" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/Products">Store</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/Genres">Categories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/Users">Community</a>
                        </li>
                        @*
                        Use a Razor code block to conditionally render navigation items
                        *@
                        @{
                            var userId = HttpContextAccessor.HttpContext.Session.GetInt32("UserId");
                            if (userId != null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" href="/Users/Library/@userId">Library</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" href="/Users/Profile/@userId">Profile</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" href="/Users/Chat/@userId">Chat</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" href="/Users/Wallet/@userId">My Wallet</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" href="/Wishlists/Index/@userId">Wishlist</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" href="/Carts/Index/@userId">Cart</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" href="/Users/Logout">Logout</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" href="/Users/Login">Login</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" href="/Users/Register">Register</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <div class="container">
        <footer class="py-3 my-4">
            <ul class="nav justify-content-center border-bottom pb-3 mb-3">
                <li class="nav-item"><a href="/Products/Index" class="nav-link px-2 text-body-secondary">Store</a></li>
                <li class="nav-item"><a href="/Genres/Index" class="nav-link px-2 text-body-secondary">Categories</a></li>
                <li class="nav-item"><a href="/Users/Index" class="nav-link px-2 text-body-secondary">Community</a></li>
            </ul>
            <p class="text-center text-body-secondary">Društvena Platforma Video Igara, © 2024</p>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
