@model DrustvenaPlatformaVideoIgara.Models.ProductImage

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Product Image</h1>

<h4>Are you sure you want to delete this product image?</h4>
<hr />
<div>
    <h4>Product Image</h4>
    <dl class="row">
        <dt class="col-sm-2">Product</dt>
        <dd class="col-sm-10">@Model.Product?.ProductName</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            <img src="@Model.ImagePath" alt="@Model.ImagePath" width="300" />
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="ImageId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
