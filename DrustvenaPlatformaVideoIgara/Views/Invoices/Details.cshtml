@model DrustvenaPlatformaVideoIgara.Models.Invoice

@{
    ViewData["Title"] = "Invoice Details";
}

<h1>Invoice Details</h1>

<div>
    <h4>Invoice</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Invoice ID
        </dt>
        <dd class="col-sm-10">
            @Model.InvoiceId
        </dd>
        <dt class="col-sm-2">
            Date Issued
        </dt>
        <dd class="col-sm-10">
            @Model.DateIssued
        </dd>
        <dt class="col-sm-2">
            Total Price
        </dt>
        <dd class="col-sm-10">
            @Model.TotalPrice €
        </dd>
    </dl>
</div>

<h3>Invoice Items</h3>
<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.InvoiceItems)
        {
            <tr>
                <td>@item.Product.ProductName</td>
                <td>@item.Price €</td>
            </tr>
        }
    </tbody>
</table>
