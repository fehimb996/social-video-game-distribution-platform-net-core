@model IEnumerable<DrustvenaPlatformaVideoIgara.Models.Review>

@{
    ViewData["Title"] = "User Reviews";
}

<style>
    .page-title {
        color: #e5e5e5;
        font-size: 2rem;
        text-align: center;
        margin-bottom: 20px;
    }

    .reviews-container {
        background-color: #2a2a2a;
        padding: 20px;
        border-radius: 10px;
        color: #e5e5e5;
        max-width: 900px;
        margin: auto;
    }

    .reviews-table {
        width: 100%;
        border-collapse: collapse;
    }

        .reviews-table th, .reviews-table td {
            padding: 15px;
            text-align: left;
        }

        .reviews-table thead th {
            background-color: #333;
            color: #c0c0c0;
        }

        .reviews-table tbody tr {
            background-color: #444;
            border-bottom: 1px solid #555;
        }

            .reviews-table tbody tr:hover {
                background-color: #555;
            }

    .product-info {
        display: flex;
        align-items: center;
    }

    .product-image img {
        width: fit-content;
        height: 80px;
        border-radius: 5px;
        object-fit: cover;
    }

    .product-name {
        color: #5bc0de;
        text-decoration: none;
    }

        .product-name:hover {
            text-decoration: underline;
        }

    .rating {
        font-weight: bold;
    }

        .rating.positive {
            color: #3ac37a;
        }

        .rating.negative {
            color: #d9534f;
        }
</style>

<h1 class="page-title">User Reviews</h1>

<div class="reviews-container">
    @if (Model.Any())
    {
        <table class="table reviews-table align-middle">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Rating</th>
                    <th>Comment</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var review in Model)
                {
                    <tr>
                        <td class="product-info">
                            <a href="@Url.Action("Details", "Products", new { id = review.Product.ProductId })" class="d-flex align-items-center">
                                <div class="product-image">
                                    <img src="@review.Product.ImagePath" alt="@review.Product.ProductName" />
                                </div>
                                <div class="product-name ms-3">
                                    @review.Product.ProductName
                                </div>
                            </a>
                        </td>
                        <td>
                            @if (review.Rating.HasValue)
                            {
                                <span class="rating @(review.Rating.Value ? "positive" : "negative")">
                                    @(review.Rating.Value ? "Positive" : "Negative")
                                </span>
                            }
                            else
                            {
                                <span class="rating">Not Rated</span>
                            }
                        </td>
                        <td>@review.Comment</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No reviews found.</p>
    }
</div>
