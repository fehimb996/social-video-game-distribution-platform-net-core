@model DrustvenaPlatformaVideoIgara.Models.WalletViewModel

@{
    ViewData["Title"] = "Wallet";
}

<h1>Wallet</h1>

<div>
    <h3>Current Balance: @Model.Balance €</h3>
</div>

<h4>Add Funds</h4>
<form asp-action="AddFunds" method="post">
    <div class="form-group">
        <label for="amount">Amount:</label>
        <select class="form-control" id="amount" name="amount">
            <option value="5">5 €</option>
            <option value="10">10 €</option>
            <option value="25">25 €</option>
            <option value="50">50 €</option>
            <option value="100">100 €</option>
        </select>
    </div>
    <div class="form-group">
        <label for="paymentMethod">Payment Method:</label>
        <select class="form-control" id="paymentMethod" name="paymentMethod">
            @foreach (var method in Model.PaymentMethods)
            {
                <option value="@method.PaymentMethodId">@method.Method</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Add Funds</button>
</form>
