@using DrustvenaPlatformaVideoIgara.ViewModels
@model WalletViewModel

@{
    ViewData["Title"] = "Wallet";
}

<style>
    .page-title {
        color: #e5e5e5;
        font-size: 2rem;
        text-align: center;
        margin-bottom: 20px;
    }

    .wallet-container {
        background-color: #2a2a2a;
        padding: 20px;
        border-radius: 10px;
        color: #e5e5e5;
        max-width: 600px;
        margin: auto;
    }

    .balance-info {
        margin-bottom: 20px;
        text-align: center;
    }

        .balance-info h3 {
            font-size: 1.5rem;
            color: #3ac37a;
        }

        .balance-info span {
            font-weight: bold;
        }

    .section-title {
        color: #c0c0c0;
        margin-bottom: 15px;
    }

    .add-funds-form {
        background-color: #333;
        padding: 20px;
        border-radius: 5px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-label {
        font-size: 1.1rem;
        margin-bottom: 10px;
        color: #c0c0c0;
    }

    .form-control {
        background-color: #444;
        color: #e5e5e5;
        border: none;
        border-radius: 5px;
        padding: 10px;
    }

    .btn-primary {
        border: none;
        padding: 10px 20px;
        font-size: 1.2rem;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn-primary:disabled {
            cursor: not-allowed;
        }
</style>


<h1 class="page-title">Wallet</h1>

<div class="wallet-container">
    <div class="balance-info">
        <h3>Current Balance: <span>@Model.Balance €</span></h3>
    </div>

    <h4 class="section-title">Add Funds</h4>
    <form asp-action="AddFunds" method="post" class="add-funds-form">
        <div class="form-group">
            <label for="amount" class="form-label">Amount:</label>
            <select class="form-control" id="amount" name="amount">
                <option value="5">5 €</option>
                <option value="10">10 €</option>
                <option value="25">25 €</option>
                <option value="50">50 €</option>
                <option value="100">100 €</option>
            </select>
        </div>
        <div class="form-group">
            <label for="paymentMethod" class="form-label">Payment Method:</label>
            <select class="form-control" id="paymentMethod" name="paymentMethod">
                @foreach (var method in Model.PaymentMethods)
                {
                    <option value="@method.PaymentMethodId">@method.Method</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Add Funds</button>
    </form>
</div>