@model IEnumerable<DrustvenaPlatformaVideoIgara.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Users list</h1>

<table class="table table-hover align-middle">
    <thead>
        <tr>
            <th>
                Nickname
            </th>
            <th>
                First name
            </th>
            <th>
                Last name
            </th>
            <th>
                Email
            </th>
            <th>
                Profile picture
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <a asp-action="Profile" asp-route-id="@item.UserId">@Html.DisplayFor(modelItem => item.NickName)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                    <img src="@Html.DisplayFor(modelItem => item.ProfilePicture)" style="height: 80px; width: 80px;" alt="Profile Picture" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.CountryName)
            </td>
        </tr>
}
    </tbody>
</table>
