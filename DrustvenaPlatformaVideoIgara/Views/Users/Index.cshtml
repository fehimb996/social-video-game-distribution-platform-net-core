@model IEnumerable<DrustvenaPlatformaVideoIgara.Models.User>

@{
    ViewData["Title"] = "Community - Users";
}

<style>
    .page-title {
        color: #e5e5e5;
        font-size: 2rem;
        text-align: center;
        margin-bottom: 20px;
    }

    .friends-container {
        background-color: #2a2a2a;
        padding: 20px;
        border-radius: 10px;
        color: #e5e5e5;
        max-width: 800px;
        margin: auto;
    }

    .friends-table {
        width: 100%;
        border-collapse: collapse;
    }

    .friends-table th,
    .friends-table td {
        padding: 15px;
        text-align: left;
    }

    .friends-table thead th {
        background-color: #333;
        color: #c0c0c0;
    }

    .friends-table tbody tr {
        background-color: #444;
        border-bottom: 1px solid #555;
        cursor: pointer;
    }

    .friends-table tbody tr:hover {
        background-color: #555;
    }

    .profile-image img {
        width: 64px;
        height: 64px;
        object-fit: cover;
    }

    .friend-link {
        color: #5bc0de;
        text-decoration: none;
    }

    .friend-link:hover {
        text-decoration: underline;
    }
</style>

<h1 class="page-title">Users</h1>

<div class="friends-container">
    @if (Model.Any())
    {
        <table class="table friends-table align-middle">
            <thead>
                <tr>
                    <th></th>
                    <th>Nickname</th>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Country</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr onclick="window.location='@Url.Action("Profile", new { id = user.UserId })';">
                        <td class="profile-image">
                            @if (!string.IsNullOrEmpty(user.ProfilePicture))
                            {
                                <img src="@user.ProfilePicture" alt="@user.NickName" class="img-fluid" />
                            }
                            else
                            {
                                <img src="~/images/default-profile.png" alt="Default Profile" class="img-fluid" />
                            }
                        </td>
                        <td>@user.NickName</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Country.CountryName</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No users found.</p>
    }
</div>
