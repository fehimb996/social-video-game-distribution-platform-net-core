@model DrustvenaPlatformaVideoIgara.Models.User

@{
    ViewData["Title"] = "Profile";
}

<h1>Profile</h1>

<div>
    <h4>@Html.DisplayFor(model => model.NickName)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProfilePicture)
        </dt>
        <div>
            <a asp-action="Games" asp-route-id="@Model.UserId">Games (@ViewData["GamesCount"])</a> <br />
            <a asp-action="Reviews" asp-route-id="@Model.UserId">Reviews (@ViewData["ReviewsCount"])</a> <br />
            <a asp-action="Friends" asp-route-id="@Model.UserId">Friends (@ViewData["FriendsCount"])</a> <br />
        </div>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ProfilePicture))
            {
                <img src="@Model.ProfilePicture" alt="Profile Picture" style="max-width: 100px; max-height: 100px;" />
            }
            else
            {
                <span>No Profile Picture</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProfileDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProfileDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Country.CountryName)
        </dd>

        @if ((bool)ViewData["IsOwnProfile"])
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                Wallet Balance
            </dt>
            <dd class="col-sm-10">
                @ViewData["WalletBalance"] €
            </dd>
        }
    </dl>
</div>
<div>
    @if ((bool)ViewData["IsOwnProfile"])
    {
        <a asp-action="Edit" asp-route-id="@Model?.UserId">Edit</a>
    }
    <a asp-action="Index">Back to List</a>
</div>
