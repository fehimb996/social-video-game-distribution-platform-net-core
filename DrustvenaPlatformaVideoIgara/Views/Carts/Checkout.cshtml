@model DrustvenaPlatformaVideoIgara.Models.CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
}

<h1>Checkout</h1>

<div>
    <h3>Wallet Balance: @Model.WalletBalance €</h3>
</div>

@if (Model.WalletBalance < Model.TotalPrice)
{
    <div class="alert alert-warning" role="alert">
        Insufficient funds. Please add more money to your wallet before proceeding.
    </div>
}

<form asp-action="Purchase" method="post">
    <!-- Hidden input to specify Wallet as the payment method -->
    <input type="hidden" asp-for="SelectedPaymentMethod" value="1" />

    <h3>Cart Items:</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Cart.CartItems)
            {
                <tr>
                    <td>@item.Product.ProductName</td>
                    <td>@item.Price €</td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <strong>Total Price: @Model.TotalPrice €</strong>
    </div>

    @if (Model.WalletBalance >= Model.TotalPrice)
    {
        <button type="submit" class="btn btn-primary">Buy</button>
    }
</form>
