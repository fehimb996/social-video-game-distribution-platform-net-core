@model DrustvenaPlatformaVideoIgara.Models.Cart

@{
    ViewData["Title"] = "Your Cart";
    var totalPrice = Model.CartItems.Sum(item => item.Price);
}

<style>
    .cart-container {
        background-color: #2a2a2a;
        padding: 20px;
        border-radius: 10px;
        color: #e5e5e5;
    }

    .table thead th {
        border-bottom: 2px solid #444;
        color: #c0c0c0;
    }

    .table-hover tbody tr:hover {
        background-color: #333;
    }

    .cart-image img {
        max-width: 200px;
        border-radius: 5px;
    }

    .cart-product-name a {
        font-size: 1.2rem;
        color: #ffffff;
        text-decoration: none;
    }

        .cart-product-name a:hover {
            text-decoration: underline;
        }

    .cart-price {
        font-size: 1.2rem;
        color: #3ac37a;
    }

    .cart-total-price {
        font-size: 1.4rem;
        font-weight: bold;
        color: #3ac37a;
    }

    .checkout-container {
        margin-top: 20px;
        text-align: right;
    }

    .btn-danger {
        background-color: #d9534f;
        border: none;
    }

    .btn-primary {
        background-color: #5bc0de;
        border: none;
    }

        .btn-primary.disabled {
            background-color: #888;
            cursor: not-allowed;
        }
</style>

<h1 class="text-center">Your Cart</h1>

@if (Model.CartItems != null && Model.CartItems.Any())
{
    <div class="cart-container">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th></th>
                    <th>Product</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CartItems)
                {
                    <tr>
                        <td class="cart-image">
                            <a asp-action="Details" asp-controller="Products" asp-route-id="@item.Product.ProductId">
                                <img src="@item.Product.ImagePath" alt="@item.Product.ProductName" class="img-fluid" />
                            </a>
                        </td>
                        <td class="cart-product-name">
                            <a asp-action="Details" asp-controller="Products" asp-route-id="@item.Product.ProductId" class="text-light">
                                @item.Product.ProductName
                            </a>
                        </td>
                        <td class="cart-price">
                            @item.Price €
                        </td>
                        <td>
                            <form asp-action="RemoveItem" method="post">
                                <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                <input type="submit" value="Remove" class="btn btn-danger btn-sm" />
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2" class="text-right">Total:</td>
                    <td colspan="2" class="cart-total-price">@totalPrice €</td>
                </tr>
            </tfoot>
        </table>
    </div>
}
else
{
    <p>Your cart is empty.</p>
}

<div class="checkout-container">
    <a asp-action="Checkout" class="btn btn-primary btn-lg @(Model.CartItems == null || !Model.CartItems.Any() ? "disabled" : "")">Checkout</a>
</div>
