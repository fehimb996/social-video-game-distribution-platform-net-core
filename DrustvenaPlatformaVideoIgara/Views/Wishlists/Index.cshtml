@model DrustvenaPlatformaVideoIgara.Models.Wishlist

@{
    ViewData["Title"] = "Your Wishlist";
}

<h1>Your Wishlist</h1>

@if (Model != null && Model.WishlistItems.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.WishlistItems)
            {
                <tr>
                    <td>@item.Product.ProductName</td>
                    <td>@item.Product.Price €</td>
                    <td>
                        <form asp-action="RemoveItem" method="post">
                            <input type="hidden" name="wishlistItemId" value="@item.WishlistItemId" />
                            <input type="submit" value="Remove" class="btn btn-danger" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Your wishlist is empty.</p>
}
