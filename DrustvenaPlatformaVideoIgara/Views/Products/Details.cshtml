@model DrustvenaPlatformaVideoIgara.Models.ProductDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ProductDetails)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Product.ProductDetails.Replace(Environment.NewLine, "<br />"))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Model.Product.ReleaseDate.ToString("dd-MMM-yyyy")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Price) €
        </dd>
    </dl>
</div>
<div>
    @if (Model.IsUserLoggedIn)
    {
        if (Model.IsOwned)
        {
            <span class="btn btn-success disabled">Already in Library</span>
        }
        else
        {
            if (Model.IsInCart)
            {
                <span class="btn btn-success disabled">Added to Cart</span>
            }
            else
            {
                <form asp-action="AddToCart" method="post">
                    <input type="hidden" name="productId" value="@Model.Product.ProductId" />
                    <button type="submit" class="btn btn-primary">Add to Cart</button>
                </form>
            }

            if (Model.IsInWishlist)
            {
                <span class="btn btn-warning disabled">Added to Wishlist</span>
            }
            else
            {
                <form asp-action="AddToWishlist" method="post">
                    <input type="hidden" name="productId" value="@Model.Product.ProductId" />
                    <button type="submit" class="btn btn-warning">Add to Wishlist</button>
                </form>
            }
        }
    }
    else
    {
        <span class="btn btn-primary disabled">Add to Cart (Login Required)</span>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Product.ProductId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
